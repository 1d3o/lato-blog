<%
  block = cell(:elements, :block).new(class: 'xs-12 sm-12 md-12 posts__edit-seo-description')
  row = cell(:elements, :row).new
  form = cell(:inputs, :form).new(url: lato_blog.posts_update_seo_description_path, method: :post, remote: true)
%>

<%=raw block.open %>

  <%=raw cell(:elements, :title).new(label: LANGUAGES[:lato_blog][:mixed][:seo_description], size: 6) %>

  <%=raw form.open %>

    <input type="hidden" name="id" value="<%= @post.id %>">

    <%=raw row.open %>

      <%=raw cell(:inputs, :textarea).new(name: 'seo_description', value: @post.seo_description,
      class: 'md-12') %>

    <%=raw row.close %>

  <%=raw form.close %>

<%=raw block.close %>