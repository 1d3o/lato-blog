<%
  row = cell(:elements, :row).new
  block = cell(:elements, :block).new(class: 'xs-12 sm-12 md-12')
  code = cell(:elements, :code).new
%>

<!-- PRESENTATION -->
<%=raw row.open %>

  <%=raw block.open %>

    <%=raw cell(:elements, :title).new(label: 'Fields: Text') %>

    <p>A normal text input.</p>

  <%=raw block.close %>

<%=raw row.close %>
<!-- / PRESENTATION -->

<!-- CONFIGURATION SECTION -->
<%=raw row.open %>

<%=raw block.open %>

<%=raw cell(:elements, :title).new(label: 'Configuration', size: 4) %>

<p>
The configuration option should be:
</p>

<%=raw code.open %>

post_fields:
  author:
    type: text
    label: Insert the name of the author
    class: md-6
    categories: ['category_permalink']

<%=raw code.close %>

<%=raw block.close %>

<%=raw row.close %>
<!-- / CONFIGURATION SECTION -->

<!-- API RESULT SECTION -->
<%=raw row.open %>

<%=raw block.open %>

<%=raw cell(:elements, :title).new(label: 'API Result', size: 4) %>

<p>
The object returned from API should be:
</p>

<%=raw code.open %>

"fields": {
  "author": {
    "key": "author",
    "typology": "text",
    "value": ""
  }
}

<%=raw code.close %>

<%=raw block.close %>

<%=raw row.close %>
<!-- / API RESULT SECTION -->